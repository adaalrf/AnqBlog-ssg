{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./public",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/ts/generate-index.js",
    "src/ts/fetch-posts.ts",
    "src/ts/toggle-theme.ts"
  ],
  "exclude": ["node_modules", "public", "legacy"]
}
